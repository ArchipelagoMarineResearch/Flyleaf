<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0-windows;net5.0-windows;net472</TargetFrameworks>
	<UseWindowsForms>true</UseWindowsForms>
    <UseWPF>true</UseWPF>
    <Version>1.1.15</Version>
    <Authors>SuRGeoNix</Authors>
    <Copyright>SuRGeoNix © 2021</Copyright>
    <PackageLicenseExpression>LGPL-3.0-or-later</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/SuRGeoNix/Flyleaf</PackageProjectUrl>
    <PackageIcon>Flyleaf.png</PackageIcon>
    <PackageIconUrl />
    <PackageTags>flyleaf flyleaflib video audio media player element control</PackageTags>
    <Description>WPF Media Player Control/Element (based on FlyleafLib)</Description>
    <PackageReleaseNotes>
		Updates FlyleafLib to v3.4.0 and uses all the new embedded functionality
		Code clean-up for Key/Mouse Bindings and Activity Mode
		Uses FlyleafLib's MVVM for Properties/Converters/ICommands
		Fixes an issue with Speed (and removes SpeedReverse)
	</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Dragablz" Version="0.0.3.223" />
    <PackageReference Include="MaterialDesignColors" Version="2.0.3-ci8" />
    <PackageReference Include="MaterialDesignThemes" Version="4.2.1-ci8" />
    <PackageReference Include="WpfColorFontDialog" Version="1.0.8" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FlyleafLib\FlyleafLib.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\Images\Flyleaf.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
